<!-- Contact with Map - START -->
<div class="container">
	<p id="notice" style="color:white;"><%= notice %></p>
    <div class="row">
    	<div class="col-md-8">
            <div>
                <div class="panel panel-default">
                    
                    <div class="panel-body text-center">
                        
                        <div id="map1" class="map">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="well well-sm">
			  
			    <fieldset>
			      <legend class="text-center header">Contact us</legend>
			       
			        
                        <center><p><strong>Location:</strong>Trivandrum Vellarada</p></center>
                       
                       
			        <%= form_for(@contact) do |f| %>
			          <% if @contact.errors.any? %>
			            <div id="error_explanation">
			              <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

			              <ul>
			              <% @contact.errors.full_messages.each do |message| %>
			                <li><%= message %></li>
			              <% end %>
			              </ul>
			            </div>
			          <% end %>
			          <div class="form-group">
			            <div class="col-md-10 col-md-offset-1">
			              <%#= f.label :name %>
			              <%= f.text_field :name ,class: "form-control",placeholder: "Your Name"%>
			            </div>
			          </div>
			          <div class="form-group">
			            <div class="col-md-10 col-md-offset-1">
			            <%#= f.label :email %><br>
			            <%= f.text_field :email,class: "form-control",placeholder: "Email" %>
			            </div>
			          </div>

			          <div class="form-group">
			            <div class="col-md-10 col-md-offset-1">
			            <%#= f.label :message %><br>
			            <%= f.text_area :message,class: "form-control",placeholder: "Enter your massage for us here. We will get back to you within 2  days.",rows: "7" %>
			            </div>
			          </div>
			          <div class="form-group">
			            <div class="col-md-12 text-center"><br>
			             <%= f.submit "submit", class: "btn btn-primary btn-lg" %>
			            </div>
			          </div>
			        <% end %>
			    </fieldset>
			  
			</div>
        </div>        
    </div>
</div>


